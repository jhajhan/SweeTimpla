@model IEnumerable<DIYFilipinoDessert.Models.Order>

@{
ViewData["Title"] = "Track Orders";
}

@section Styles {
    <link rel="stylesheet" href="~/css/jali.css" />
}

<section id="Kits" class="kits-section">
    <div class="mb-4 text-center">
        <h2 class="fw-bold d-inline-block ms-2" style="color:#5A250F; padding-top: 50px;">Track Your Order</h2>
    </div>

<div class="order-grid">
@foreach (var order in Model)
{
foreach (var item in order.OrderItems)
{
<div class="order-card">
    <div class="order-image">
        <img src="@item.DessertKit.ImageUrl" alt="@item.DessertKit.Name" />
    </div>
    <div class="order-details">
        <p><strong>Dessert Kit:</strong> @item.DessertKit.Name</p>
        <p><strong>Date Placed:</strong> @order.OrderDate.ToString("MMMM dd, yyyy")</p>
        <p><strong>Total:</strong> ₱@order.TotalAmount</p>
        <p><strong>Payment Method:</strong> @order.PaymentMethod</p>
        <p><strong>Status:</strong> <span class="status @order.Status.ToLower()">@order.Status</span></p>
        <button class="download-btn" onclick="location.href='@Url.Action("DownloadInstructions", "Order", new { dessertKitId = item.DessertKit.Id })'">
            🍮Cooking Instructions
        </button>

    </div>
</div>
}
}
</div>
</section>
