<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SweeTimpla</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/ADET_Nikki_FrontEnd.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light custom-navbar shadow-sm py-3">
            <div class="container">
                <!-- Logo and Brand Name (left) -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/LogoName.png" alt="SweeTimpla Logo" width="170" style="max-height:56px;">
                </a>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="DessertKit" asp-action="Index">Kits</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="BuildYourOwn" asp-action="Index">Build Your Own</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="About" asp-action="Index">About</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a></li>
                    </ul>
                </div>

                <!-- Right Side: Search and Auth/Profile -->
                <div class="d-flex align-items-center gap-3">
                    <!-- Search textbox always visible -->
                    <input type="text"
                           class="form-control"
                           placeholder="Search kits..."
                           style="width: 190px; background:#FFF; border:2px solid #E4DFDF; color:#5A250F;" />

                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Profile picture if logged in -->
                        <a href="/Profile">
                            <img src="~/images/profilepic.png" alt="Profile" class="rounded-circle" style="width:40px; height:40px; object-fit:cover; border:2px solid #A3D86B;">
                        </a>
                    }
                    else
                    {
                        <!-- Single Login/Sign up button if not logged in -->
                        <button class="btn btn-success"
                                style="background:#A3D86B; color:#5A250F; border:none;"
                                data-bs-toggle="modal" data-bs-target="#loginModal">
                            Login / Sign up
                        </button>
                    }
                </div>

        </nav>

        <!-- Login/Sign Up Modal -->
        <div id="loginSignupModal" class="modal show" tabindex="-1" style="display:block; background:rgba(0,0,0,0.45);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content sweetimpla-modal px-4 py-3" style="border-radius: 20px; border: none; max-width: 400px; margin:auto;">
                    <!-- Close Button -->
                    <button type="button" class="btn-close position-absolute top-0 end-0 m-3" aria-label="Close" data-bs-dismiss="modal" style="z-index:2;"></button>
                    <!-- Logo -->
                    <div class="text-center mb-2">
                        <img src="/images/LogoName.png" alt="SweeTimpla" style="height:48px; margin-bottom: 0.3rem;">
                    </div>
                    <div class="sweetimpla-divider mb-3"></div>
                    <h2 class="fw-bold text-center mb-3" style="color:#A3D86B; font-size:2rem;">Sign In</h2>

                    <!-- Login Modal -->
                    <form id="loginForm">
                        <div class="mb-3">
                            <label class="form-label" for="loginEmail" style="font-size: 0.98rem;">Email</label>
                            <input type="email" id="loginEmail" class="form-control" placeholder="Enter email" style="border-radius:10px;">
                        </div>
                        <div class="mb-2 position-relative">
                            <label class="form-label" for="loginPassword">Password</label>
                            <input type="password" id="loginPassword" class="form-control sweetimpla-password-input" placeholder="Enter password">
                            <span class="toggle-password" onclick="togglePassword('loginPassword', this)">
                                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
                                    <circle cx="12" cy="12" r="3"></circle>
                                    <path d="M2 12s4-7 10-7 10 7 10 7-4 7-10 7S2 12 2 12z"></path>
                                    <line x1="4" y1="4" x2="20" y2="20" stroke-width="2"></line>
                                </svg>
                            </span>
                        </div>

                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div>
                                <input type="checkbox" id="rememberMe" style="accent-color: #A3D86B;">
                                <label for="rememberMe" style="font-size:0.95rem;">Remember me</label>
                            </div>
                            <a href="#" id="forgotPasswordLink" style="color:#3399ff;font-size:0.95rem;">Forgot password?</a>
                        </div>
                        <button type="submit" class="btn w-100 mb-3" style="background:#A3D86B; color:#fff; border-radius:10px; font-weight:600; font-size:1.05rem;">Sign in</button>
                        <div class="text-center mb-2" style="font-size:0.97rem;">
                            Don’t have an account? <a href="#" onclick="switchToSignUp(event)" style="color:#3399ff;">Sign up</a>
                        </div>
                    </form>

                    <!-- Sign Up Modal -->
                    <form id="signUpForm" style="display:none;">
                        <div class="mb-3">
                            <label class="form-label" for="signupName" style="font-size: 0.98rem;">Full Name</label>
                            <input type="text" id="signupName" class="form-control" placeholder="Enter full name" style="border-radius:10px;">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="signupEmail" style="font-size: 0.98rem;">Email</label>
                            <input type="email" id="signupEmail" class="form-control" placeholder="Enter email" style="border-radius:10px;">
                        </div>
                        <div class="mb-2 position-relative">
                            <label class="form-label" for="signupPassword">Password</label>
                            <input type="password" id="signupPassword" class="form-control sweetimpla-password-input" placeholder="Enter password">
                            <span class="toggle-password" onclick="togglePassword('loginPassword', this)">
                                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="3"></circle>
                                    <path d="M2 12s4-7 10-7 10 7 10 7-4 7-10 7S2 12 2 12z"></path>
                                </svg>
                            </span>
                        </div>

                        <div class="mb-2 position-relative">
                            <label class="form-label" for="signupConfirmPassword">Password</label>
                            <input type="password" id="signupConfirmPassword" class="form-control sweetimpla-password-input" placeholder="Re-enter password">
                            <span class="toggle-password" onclick="togglePassword('loginPassword', this)">
                                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="3"></circle>
                                    <path d="M2 12s4-7 10-7 10 7 10 7-4 7-10 7S2 12 2 12z"></path>
                                </svg>
                            </span>
                        </div>

                        <div class="mb-3 d-flex align-items-center" style="font-size:0.95rem;">
                            <input type="checkbox" id="acceptTerms" style="accent-color: #A3D86B; margin-right: 6px;">
                            <label for="acceptTerms">I have read and accept the <a href="#" style="color:#3399ff;">Terms & Conditions</a> and <a href="#" style="color:#3399ff;">Privacy Policy</a></label>
                        </div>
                        <button type="submit" class="btn w-100 mb-3" style="background:#A3D86B; color:#fff; border-radius:10px; font-weight:600; font-size:1.05rem;">Sign up</button>
                        <div class="text-center mb-2" style="font-size:0.97rem;">
                            Already have an account? <a href="#" onclick="switchToLogin(event)" style="color:#3399ff;">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <!-- Forgot Password Modal -->
        <div class="modal fade" id="forgotModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" style="max-width:390px;">
                <div class="modal-content rounded-4 border-0 shadow">
                    <div class="modal-header border-0 pb-0">
                        <div class="w-100 text-center">
                            <img src="~/images/LogoName.png" alt="Logo" style="height:38px;" class="mb-1" />
                            <div class="sweetimpla-divider mb-3"></div>
                            <div class="fw-bold" style="font-size:1.25rem;color:#A3D86B;">Forgot Password?</div>
                        </div>
                        <button type="button" class="btn-close position-absolute end-0 top-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body pt-0">
                        <form>
                            <label class="form-label mt-2 mb-1" for="forgot-email">Email</label>
                            <input type="email" class="form-control mb-3" id="forgot-email" placeholder="Enter your email" style="background:#f5f5f5;">
                            <button type="submit" class="btn w-100" style="background:#A3D86B; color:#fff; font-weight:600;">Reset Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
